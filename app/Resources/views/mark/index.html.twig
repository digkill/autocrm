{% extends 'base.html.twig' %}

{% block body %}
    <h1>Marks list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Class</th>
                <th>Model</th>
                <th>Places</th>
                <th>Yearofissue</th>
                <th>Enginecapacity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for mark in marks %}
            <tr>
                <td><a href="{{ path('mark_show', { 'id': mark.id }) }}">{{ mark.id }}</a></td>
                <td>{{ mark.name }}</td>
                <td>{{ mark.class }}</td>
                <td>{{ mark.model }}</td>
                <td>{{ mark.places }}</td>
                <td>{{ mark.yearOfIssue }}</td>
                <td>{{ mark.engineCapacity }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('mark_show', { 'id': mark.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('mark_edit', { 'id': mark.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('mark_new') }}">Create a new mark</a>
        </li>
    </ul>
{% endblock %}
